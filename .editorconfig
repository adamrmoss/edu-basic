# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
quote_type = single
ij_typescript_use_double_quotes = false
ij_typescript_enforce_trailing_comma = always
ij_typescript_trailing_comma = always

[*.js]
quote_type = single
ij_javascript_use_double_quotes = false
ij_javascript_enforce_trailing_comma = always
ij_javascript_trailing_comma = always

[*.md]
max_line_length = off
trim_trailing_whitespace = false
